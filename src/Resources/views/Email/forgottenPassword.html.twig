{% extends '@VinorcolaPrivateUser/emailLayout.html.twig' %}



{% block private_user_body %}
    {% set link = url('private_user.forgottenPassword.changePassword', { token: user.token }) %}

    <h2>{{ 'private_user.email.forgottenPassword.title'|trans }}</h2>
    <p>{{ 'private_user.email.forgottenPassword.greeting'|trans({ '%name%': user.displayName }) }}</p>
    <p>{{ 'private_user.email.forgottenPassword.content'|trans }}</p>
    <p><a href="{{ link }}">{{ link }}</a></p>
{% endblock %}
